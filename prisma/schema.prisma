datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}



model User {
  id        String   @id @default(cuid())
  email     String   @unique
  passwordHash String?
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credoLogs CredoPracticeLog[]
  chatMessages ChatMessage[]
  profile UserProfile?
  studyTasks StudyTask[]
}

model CredoItem {
  id          String   @id       // "credo-1" など固定ID
  order       Int
  category    String
  title       String
  description String

  practiceLogs CredoPracticeLog[]
}

model CredoPracticeLog {
  id        String   @id @default(cuid())
  userId    String
  credoId   String
  date      DateTime
  done      Boolean
  note      String     @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User      @relation(fields: [userId], references: [id])
  credo CredoItem @relation(fields: [credoId], references: [id])

  @@index([userId, date])
  @@index([userId, credoId, date])
  @@unique([userId, credoId, date]) // 1ユーザー1クレド1日で一意
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // 'user' | 'assistant'
  message   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model UserProfile {
  id          String  @id @default(cuid())
  userId      String  @unique
  weeklyGoal  String?
  activeHours String?
  coachTone   String?

  user User @relation(fields: [userId], references: [id])
}

model StudyTask {
  id        String   @id @default(cuid())
  userId    String
  title     String
  description String?
  dueDate   DateTime?
  status    String   @default("todo") // todo | in_progress | done
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  subtasks TaskSubtask[]

  @@index([userId, dueDate])
  @@index([userId, status, dueDate])
}

model TaskSubtask {
  id        String   @id @default(cuid())
  taskId    String
  title     String
  status    String   @default("todo") // todo | in_progress | done
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task StudyTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId, status])
}
