datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credoLogs CredoPracticeLog[]
}

model CredoItem {
  id          String   @id       // "credo-1" など固定ID
  order       Int
  category    String
  title       String
  description String

  practiceLogs CredoPracticeLog[]
}

model CredoPracticeLog {
  id        String   @id @default(cuid())
  userId    String
  credoId   String
  date      DateTime
  done      Boolean
  note      String     @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User      @relation(fields: [userId], references: [id])
  credo CredoItem @relation(fields: [credoId], references: [id])

  @@index([userId, date])
  @@index([userId, credoId, date])
  @@unique([userId, credoId, date]) // 1ユーザー1クレド1日で一意
}
