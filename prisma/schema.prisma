// schema.prisma

datasource db {
  provider = "sqlite"      // まずは開発用に sqlite 前提でOK（npx prisma init のデフォルト）
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 将来 NextAuth を入れるときに拡張/差し替え予定
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credoLogs CredoPracticeLog[]
}

// クレド 11箇条のマスタ
model CredoItem {
  // "credo-1" ~ "credo-11" などを入れる想定
  id          String             @id
  order       Int
  category    String
  title       String
  description String

  practiceLogs CredoPracticeLog[]
}

// 1ユーザー × 1日 × 1クレド の実践ログ
model CredoPracticeLog {
  id        String   @id @default(cuid())
  userId    String
  credoId   String
  date      DateTime // "YYYY-MM-DD" 相当の日付（時間は 00:00:00 でOK）
  done      Boolean
  note      String   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User      @relation(fields: [userId], references: [id])
  credo CredoItem @relation(fields: [credoId], references: [id])

  @@index([userId, date])
  @@index([userId, credoId, date])
  @@unique([userId, credoId, date]) // 1日1クレド1レコードを保証
}


