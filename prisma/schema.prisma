datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  credoLogs    CredoPracticeLog[]
  chatMessages ChatMessage[]
  profile      UserProfile?
  studyTasks   StudyTask[]
  weeklyReports WeeklyReport[]
  notes        Note[]
}

model CredoItem {
  id          String   @id
  order       Int
  category    String
  title       String
  description String

  practiceLogs CredoPracticeLog[]
}

model CredoPracticeLog {
  id        String   @id @default(cuid())
  userId    String
  credoId   String
  date      DateTime
  done      Boolean
  note      String   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User      @relation(fields: [userId], references: [id])
  credo CredoItem @relation(fields: [credoId], references: [id])

  @@index([userId, date])
  @@index([userId, credoId, date])
  @@unique([userId, credoId, date])
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String
  message   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model UserProfile {
  id                  String  @id @default(cuid())
  userId              String  @unique
  weeklyGoal          String?
  activeHours         String?
  coachTone           String?
  pomodoroEnabled     Boolean @default(false)
  pomodoroWorkMinutes Int     @default(25)
  pomodoroBreakMinutes Int    @default(5)

  user User @relation(fields: [userId], references: [id])
}

model StudyTask {
  id            String    @id @default(cuid())
  userId        String
  title         String
  description   String?
  source        String    @default("user")
  dueDate       DateTime?
  status        String    @default("todo")
  note          String?
  parentId      String?
  totalWorkTime Int       @default(0)  // Total work time in seconds
  lastStartedAt DateTime?              // Timestamp when work was last started
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user     User       @relation(fields: [userId], references: [id])
  parent   StudyTask? @relation("TaskToSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  children StudyTask[] @relation("TaskToSubtasks")
  notes    Note[]     @relation("NoteToTask")

  @@index([userId, dueDate])
  @@index([userId, status, dueDate])
  @@index([parentId])
}

model WeeklyReport {
  id              String   @id @default(cuid())
  userId          String
  weekStart       DateTime @db.Date
  conditionSummary Json?
  activitySummary  Json?
  aiAnalysis       Json?
  nextWeekFocus    Json?
  supporterExport  Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, weekStart])
}

model Note {
  id           String   @id @default(cuid())
  userId       String
  title        String?
  content      String?  @db.Text
  drawingData  Json?
  imageFiles   Json?
  ocrTexts     Json?
  templateType String?
  templateData Json?
  tags         Json?
  relatedTaskId String?
  isShareable  Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  relatedTask StudyTask? @relation("NoteToTask", fields: [relatedTaskId], references: [id])

  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, templateType])
  @@index([userId, relatedTaskId])
}
